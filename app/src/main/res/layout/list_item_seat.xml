<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_seat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/seat_open">


    </ImageView>

    <ImageView
        android:id="@+id/img_seat_selected"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/seat_layout_screen_nor_std"
        android:visibility="invisible"></ImageView>

    <ImageView
        android:id="@+id/img_driver_Seat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/steering_icon"
        android:visibility="invisible"></ImageView>

    <ImageView
        android:id="@+id/img_seat_booked"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/seat_book"
        android:visibility="invisible"></ImageView>

    <ImageView
        android:id="@+id/img_seat_reserved"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/seat_layout_screen_nor_lad_avl"
        android:visibility="invisible"></ImageView>

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/img_seat"
        android:layout_below="@+id/img_seat"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="A1"
        android:textSize="15sp"></TextView>
</RelativeLayout>